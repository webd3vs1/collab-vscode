{
    "name": "collab",
    "displayName": "collab",
    "description": "Remotely work on a project at anytime",
    "icon": "resources/icon.png",
    "version": "0.1.0",
    "repository": {
        "url": "https://github.com/webd3vs1/collab-vscode-extension"
    },
    "publisher": "ms-az",
    "homepage": "collab.webd3vs.xyz",
    "engines": {
        "vscode": "^1.65.0"
    },
    "categories": [ "Other" ],
    "activationEvents": [
        "onCommand:collab.login",
        "onFileSystem:collab"
    ],
    "main": "./out/main.js",
    "contributes": {
        "commands": [
            {
                "command": "collab.login",
                "title": "Login to collab"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "rm out -r && npm run esbuild-base -- --minify",
        "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node",
        "esbuild": "npm run esbuild-base -- --sourcemap",
        "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js",
        "package": "vsce package -o release"
    },
    "devDependencies": {
        "@types/node": "^18.0.0",
        "@types/vscode": "^1.65.0",
        "esbuild": "^0.14.48",
        "typescript": "^4.7.4"
    },
    "dependencies": {
        "axios": "^0.27.2",
        "socket.io-client": "^4.5.1"
    }
}
